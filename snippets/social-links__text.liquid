{%- style  -%}
  a.link.text-social__link {
    text-decoration: none;
    padding: 1rem 1.3rem;
  }
  a.link.text-social__link span{
      font-size: 1.4rem;
}
  .team__list-social li.list-social__item:hover {
    background: var(--gradient-base-background-2);
}
  ul.team__list-social{margin: 0 0 0 2rem;}
{%- endstyle -%}
