{% if section.settings.section_heading != blank or section.settings.section_sub_heading != blank or   section.settings.section_description != blank or section.settings.section_button_link != blank %}
<div class="section-heading {{ section.settings.heading_position | escape}} color-{{ section.settings.heading_color_scheme }}">
  {% if section.settings.section_sub_heading != blank %}
  <h6 class="section-sub-heading">{{ section.settings.section_sub_heading }}</h6>
  {% endif %}
  {% if section.settings.section_heading != blank %}
  <h3 class="section-main-heading">{{ section.settings.section_heading }}</h3>
  {% endif %}
  {% if section.settings.section_description != blank %}
  <p class="section-heading-description">{{ section.settings.section_description }}</p>
  {% endif %}
  {% if section.settings.section_button_link != blank  and section.settings.section_button_text != blank %}
  <a href="{{ section.settings.section_button_link }}" class="button">{{ section.settings.section_button_text }}</a>
  {% endif %}
</div>
{% endif %}